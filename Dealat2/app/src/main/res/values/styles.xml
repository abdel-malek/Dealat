<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="noTitleTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="editTextWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/whiteTransparent</item>
    </style>

    <style name="textHeadline" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">CenturyGothicRegular</item>
    </style>

    <style name="textNormal" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">calibri</item>
    </style>


    <style name="noTitleTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="noTitleTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="noTitleTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:queryHint">@string/hintSearch</item>
       <item name="android:background">@drawable/outline_white</item>
    </style>

    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="textDetail" parent="textNormal">
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

</resources>
