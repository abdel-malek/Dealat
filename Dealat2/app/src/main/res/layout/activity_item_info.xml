<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blur"
    android:id="@+id/container2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/container"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:focusableInTouchMode="true"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/hintTitle"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/hintChooseLocation"
                android:textColorHint="@color/whiteTransparent"
                >

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:dropDownHeight="140dp"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelShowPeriod"
                style="@style/textNormal"
                android:textColor="@color/whiteTransparent"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:backgroundTint="@color/white"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/labelchooseCategory"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="true"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/containerPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/hintPrice"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchNegotiable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:text="@string/labelNegotiable"
                android:textColor="@color/white"
                android:background="@drawable/line_white"
                android:theme="@style/switchStyle"
                />

            <!-- Templates -->

            <TextView
                android:id="@+id/textBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/labelSelectBrand"
                style="@style/textNormal"
                android:textColor="@color/whiteTransparent"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:backgroundTint="@color/white"
                />

            <TextView
                android:id="@+id/textModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/labelSelectModel"
                style="@style/textNormal"
                android:textColor="@color/whiteTransparent"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:backgroundTint="@color/white"
                />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/labelManufactureYear"
                style="@style/textNormal"
                android:textColor="@color/whiteTransparent"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:backgroundTint="@color/white"
                />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchAutomatic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:visibility="gone"
                android:text="@string/labelAutomatic"
                android:textColor="@color/white"
                android:background="@drawable/line_white"
                android:theme="@style/switchStyle"
                />

            <!-- -->

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchSecondhand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:visibility="gone"
                android:text="@string/labelSecondhand"
                android:textColor="@color/white"
                android:background="@drawable/line_white"
                android:theme="@style/switchStyle"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/containerKilometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:hint="@string/hintKilometer"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editKilo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>


            <!-- -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/containerSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:hint="@string/hintSize"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>

            <!-- -->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/containerSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:hint="@string/hintSpace"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editSpace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/containerRooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:hint="@string/hintRooms"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editRooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />

                </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/containerFloors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:hint="@string/hintFloors"
                android:textColorHint="@color/whiteTransparent"
                >

                <EditText
                    android:id="@+id/editFloors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/containerState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:hint="@string/hintState"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchFurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:visibility="gone"
                android:text="@string/labelWithFurn"
                android:textColor="@color/white"
                android:background="@drawable/line_white"
                android:theme="@style/switchStyle"
                />

            <!-- -->

            <TextView
                android:id="@+id/textEdu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/labelSelectEdu"
                style="@style/textNormal"
                android:textColor="@color/whiteTransparent"
                />

           <android.support.v7.widget.AppCompatSpinner
               android:id="@+id/spinnerEdu"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="16dp"
               android:visibility="gone"
               style="@style/Base.Widget.AppCompat.Spinner.Underlined"
               android:backgroundTint="@color/white"
               />

            <TextView
                android:id="@+id/textSch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/labelSelectSch"
                style="@style/textNormal"
                android:textColor="@color/whiteTransparent"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerSch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:backgroundTint="@color/white"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/containerEx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:hint="@string/hintExperience"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editEx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/containerSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:hint="@string/hintSalary"
                android:textColorHint="@color/whiteTransparent"
                >
                <EditText
                    android:id="@+id/editSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    style="@style/editTextWhite"
                    android:backgroundTint="@color/white"
                    />
                </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/editDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="24dp"
                android:hint="@string/hintDesc"
                style="@style/editTextWhite"
                android:background="@drawable/outline_white"
                />
        </LinearLayout>
    </ScrollView>


    <HorizontalScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/buttonTrue"
        android:padding="4dp"
        android:background="@color/grayTransparent"
        >

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            />
    </HorizontalScrollView>

    <Button
        android:id="@+id/buttonTrue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomBarHeight"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"
        android:text="@string/buttonSubmit"
        android:textColor="@color/white"
        android:background="@color/red"
        />

</RelativeLayout>