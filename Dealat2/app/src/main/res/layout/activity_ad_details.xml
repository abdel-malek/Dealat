<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.AdDetailsActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="348dp">

        <RelativeLayout
            android:id="@+id/containerPager"
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/services" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/grayTransparent"
                android:elevation="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="nmfakjfnvosnfv"
                    android:textAppearance="@style/textHeadline"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/title"
                    android:layout_below="@+id/title"
                    android:text="200 views"
                    android:textAppearance="@style/textNormal"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textViewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView"
                    android:layout_below="@+id/textView"
                    android:text="12/02"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/whiteTransparent" />

                <ImageButton
                    android:id="@+id/buttonFav"
                    android:layout_width="@dimen/imageSmall"
                    android:layout_height="@dimen/imageSmall"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circel_white_transparent"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/star_gray" />

            </RelativeLayout>
        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/services"
            app:tabBackground="@drawable/tab_style"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="80dp"
            app:tabMinWidth="80dp"
            app:tabMode="scrollable" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="@dimen/imageViewLarge"
            android:layout_height="@dimen/imageViewLarge"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:background="@drawable/circle_red"
            android:elevation="8dp"
            android:gravity="center"
            android:text="19992$"
            android:textColor="@color/white" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/container2"
        android:layout_below="@+id/container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomBarHeight"
        android:layout_alignParentBottom="true"
        android:background="@color/red"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="@null"
            android:src="@drawable/ic_phone_in_talk_white_24dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/buttonMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:background="@null"
            android:src="@drawable/ic_textsms_white_24dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/buttonReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:background="@null"
            android:src="@drawable/ic_flag_white_24dp" />
    </LinearLayout>

</RelativeLayout>