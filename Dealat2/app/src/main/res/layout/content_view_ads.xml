<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dealat.View.DrawerActivity"
    tools:showIn="@layout/app_bar_view_ads">

    <include
        layout="@layout/pager_commercial"
        />

   <!-- <TextView
        android:id="@+id/textViewCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewpager"
        android:padding="4dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/grayTransparent"
        />-->

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_above="@+id/container2"
        android:layout_below="@+id/viewpager"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <include
        layout="@layout/layout_list_empty"
        />

    <LinearLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:padding="@dimen/bottomBarPadding"
        android:background="@color/red"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/imageSmall"
            android:layout_height="@dimen/imageSmall"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAlignment="viewStart"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/whiteTransparent"
            style="@style/TextAppearance.AppCompat.Caption"
            />

        <TextView
            android:id="@+id/textViewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/white"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            />

        <ImageButton
            android:id="@+id/buttonViews"
            android:layout_width="@dimen/imageSmall"
            android:layout_height="@dimen/imageSmall"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitCenter"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/buttonFav"
            android:layout_width="@dimen/imageXSmall"
            android:layout_height="@dimen/imageXSmall"
            android:layout_margin="4dp"
            android:visibility="gone"
            android:background="@null"
            android:src="@drawable/ic_star_border_white_24dp"
            />
    </LinearLayout>

</RelativeLayout>