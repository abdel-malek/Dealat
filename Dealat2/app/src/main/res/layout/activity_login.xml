<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_blur"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="24dp"
    >

    <ImageView
        android:layout_width="@dimen/imageViewLarge"
        android:layout_height="@dimen/imageViewLarge"
        android:layout_margin="16dp"
        android:src="@drawable/dealat_logo_red"
        />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/editTextWhite"
        android:backgroundTint="@color/white"
        android:hint="@string/hintEmailPhone"
        />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        style="@style/editTextWhite"
        android:backgroundTint="@color/white"
        android:hint="@string/hintPassword"
        />

    <EditText
        android:id="@+id/editPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        style="@style/editTextWhite"
        android:backgroundTint="@color/white"
        android:hint="@string/hintConfirmPassword"
        />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintSetLocation"
        style="@style/editTextWhite"
        android:backgroundTint="@color/white"
        />

    <Button
        android:id="@+id/buttonTrue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:textColor="@color/red"
        android:text="@string/buttonRegister"
        android:background="@drawable/rounded_corner_white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelHaveAccoutn"
            android:textColor="@color/white"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonSignIn"
            android:textColor="@color/red"
            android:background="@null"
            />

    </LinearLayout>

    <Button
        android:id="@+id/buttonFalse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:textColor="@color/white"
        android:text="@string/buttonSkip"
        android:background="@drawable/rounded_corner_red"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/buttonGmail"
            android:layout_width="@dimen/imageViewMedium"
            android:layout_height="@dimen/imageViewMedium"
            android:layout_marginEnd="24dp"
            android:onClick="onClick"
            android:background="@drawable/gmail_copy"
            />

        <ImageButton
            android:id="@+id/buttonFacebook"
            android:layout_width="@dimen/imageViewMedium"
            android:layout_height="@dimen/imageViewMedium"
            android:layout_marginStart="24dp"
            android:onClick="onClick"
            android:background="@drawable/facebook_button"
            />
    </LinearLayout>

</LinearLayout>

</ScrollView>