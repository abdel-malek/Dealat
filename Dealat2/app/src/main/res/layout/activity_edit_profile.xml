<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blur"
    android:padding="16dp"
    >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        >

        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="@dimen/imageSmall"
            android:layout_height="@dimen/imageSmall"
            android:layout_gravity="bottom|end"
            android:elevation="8dp"
            android:onClick="onClick"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/pencil_copy"
            />
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/imageViewLarge"
            android:layout_height="@dimen/imageViewLarge"
            app:cardCornerRadius="50dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:id="@+id/imageView1"
                app:srcCompat="@drawable/dealat_logo_red"
                android:layout_gravity="center"
                >
            </ImageView>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/container"
        android:hint="@string/hintName"
        android:textColorHint="@color/whiteTransparent"
        >
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/editTextWhite"
            android:backgroundTint="@color/white"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/container2"
        android:text="@string/labelSelectCity"
        style="@style/textNormal"
        android:textColor="@color/whiteTransparent"
        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLocation"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:backgroundTint="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/buttonTrue"
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:onClick="onClick"
            android:text="@string/buttonSave"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner_red"
            />

        <Button
            android:id="@+id/buttonFalse"
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:onClick="onClick"
            android:text="@string/buttonCancel"
            android:textColor="@color/red"
            android:background="@drawable/rounded_corner_white"
            />
    </LinearLayout>
</RelativeLayout>