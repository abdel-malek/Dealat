<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/grayTransparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="start|center_vertical"
            android:padding="8dp"
            android:text=""
            android:textAppearance="@style/textNormal"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageViewArraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/two_arrows"
            android:layout_marginEnd="10dp"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imageViewArraw"
            android:layout_toEndOf="@+id/textViewCat"
            android:gravity="end"
            android:padding="8dp"
            android:text=""
            android:textAppearance="@style/textNormal"
            android:textColor="@color/white" />


    </RelativeLayout>
</FrameLayout>